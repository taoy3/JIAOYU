<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="radio">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@drawable/tab_textcolor</item>
    </style>

    <style name="demand_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@drawable/demand_head_selector</item>
        <item name="android:padding">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="attendance_tab">
        <item name="android:textColor">@color/tab_gray</item>
        <item name="android:paddingTop">@dimen/marging_8</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/att_tab_size</item>
        <item name="android:button">@null</item>
        <item name="android:paddingBottom">@dimen/marging_8</item>
        <item name="android:background">@drawable/tab_selector</item>
    </style>

    <style name="PopupWindowAnimation">
        <item name="android:windowEnterAnimation">@anim/popshow_anim</item>
        <item name="android:windowExitAnimation">@anim/pophidden_anim</item>
    </style>

    <style name="SearchWindowAnimation">
        <item name="android:windowEnterAnimation">@anim/search_righ_in</item>
        <item name="android:windowExitAnimation">@anim/search_right_out</item>
    </style>

    <style name="no_title_dialog" parent="android:Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <!--<item name="android:background">@drawable/bg_dialog</item>-->
    </style>

    <style name="weekName">
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#666</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!--教学计划界面文字样式-->
    <style name="teach_plan_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/normal_text</item>
        <item name="android:textSize">@dimen/text_14</item>
    </style>
    <!--教学计划界面图标样式-->
    <style name="teach_plan_icon">
        <item name="android:layout_width">@dimen/width_plan_icon</item>
        <item name="android:layout_height">@dimen/width_plan_icon</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/padding_15</item>
        <item name="android:layout_marginRight">@dimen/padding_10</item>
    </style>
    <!--教学计划界面箭头样式-->
    <style name="teach_plan_tarrow">
        <item name="android:layout_width">@dimen/width_10</item>
        <item name="android:layout_height">@dimen/height_10</item>
        <item name="android:layout_margin">@dimen/margin_15</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:src">@mipmap/nextarrow</item>
    </style>
    <!--教学计划界面箭头样式-->
    <style name="underline_gray">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/underline_gray</item>
    </style>
    <style name="HollowDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
</resources>
