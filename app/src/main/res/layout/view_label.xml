<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/button_selector_gray">

        <ImageView
            style="@style/teach_plan_icon"
            android:src="@mipmap/term" />

        <TextView
            style="@style/teach_plan_text"
            android:gravity="center_vertical"
            android:text="@string/term"
            android:textColor="@color/tip_text" />

        <TextView
            style="@style/teach_plan_text"
            android:layout_weight="1"
            android:gravity="center_vertical|right" />

        <ImageView style="@style/teach_plan_tarrow" />
    </LinearLayout>
    <View
        style="@style/underline_gray"/>
</LinearLayout>