<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context="com.cnst.wisdom.ui.activity.TeachPlan">

    <include
        layout="@layout/layout_head"/>
    <LinearLayout
        android:id="@+id/teach_plan_mof"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_56"
        android:background="@drawable/button_selector_gray"
        android:clickable="true">

        <ImageView
            style="@style/teach_plan_icon"
            android:src="@mipmap/teach_subject"/>

        <TextView
            style="@style/teach_plan_text"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/title_activity_teach_plan"/>

        <ImageView
            style="@style/teach_plan_tarrow"/>
    </LinearLayout>

    <View
        style="@style/underline_gray"/>

    <LinearLayout
        android:id="@+id/teach_plan_progress"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_56"
        android:background="@drawable/button_selector_gray"
        android:clickable="true">

        <ImageView
            style="@style/teach_plan_icon"
            android:src="@mipmap/teach_progress"/>

        <TextView
            style="@style/teach_plan_text"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:text="@string/teach_progress"/>

        <ImageView
            style="@style/teach_plan_tarrow"/>
    </LinearLayout>

    <View
        style="@style/underline_gray"/>
</LinearLayout>