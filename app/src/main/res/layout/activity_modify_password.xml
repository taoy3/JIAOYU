<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cnst.wisdom.ui.activity.ModifyPasswordActivity">
    <include
        layout="@layout/layout_head"/>

    <EditText
        android:id="@+id/editText_oldPassword"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="@dimen/padding_10"
        android:background="@drawable/login_input_border"
        android:hint="@string/oldPassword"
        android:maxLength="64"
        android:padding="@dimen/margin_10"
        android:textColor="@color/normal_text"
        android:inputType="textPassword"
        android:textSize="@dimen/login_text"/>

    <EditText
        android:id="@+id/editText_newPassword"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:background="@drawable/login_input_border"
        android:hint="@string/newPassword"
        android:maxLength="64"
        android:padding="@dimen/margin_10"
        android:textColor="@color/normal_text"
        android:inputType="textPassword"
        android:textSize="@dimen/login_text"/>

    <EditText
        android:id="@+id/editText_repeatPassword"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="@dimen/padding_10"
        android:background="@drawable/login_input_border"
        android:hint="@string/repeatPassword"
        android:maxLength="64"
        android:padding="@dimen/margin_10"
        android:textColor="@color/normal_text"
        android:inputType="textPassword"
        android:textSize="@dimen/login_text"/>

    <TextView
        android:id="@+id/textView_submit"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:background="@drawable/button_common"
        android:gravity="center"
        android:text="@string/alert_dialog_ok"
        android:textColor="@color/white"
        android:textSize="17sp"/>
</LinearLayout>
