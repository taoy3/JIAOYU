<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context="com.cnst.wisdom.ui.activity.TeachPlan">

    <include
        layout="@layout/layout_head"/>
    <com.taoy3.jiaoyu.ui.view.LabelView
        android:id="@+id/teach_set_clazz"
        app:drawable_un_clickable="@mipmap/clazz"
        app:drawable_clickable="@mipmap/clazz"
        app:label_text="@string/atten_class"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_56"/>
    <com.taoy3.jiaoyu.ui.view.LabelView
        android:id="@+id/teach_set_subject"
        app:drawable_un_clickable="@mipmap/subject_"
        app:drawable_clickable="@mipmap/subject"
        app:label_text="@string/subject"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_56"/>
    <com.taoy3.jiaoyu.ui.view.LabelView
        android:id="@+id/teach_set_term"
        app:drawable_un_clickable="@mipmap/term_"
        app:drawable_clickable="@mipmap/term"
        app:label_text="@string/term"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_56"/>
    <com.taoy3.jiaoyu.ui.view.LabelView
        android:id="@+id/teach_set_cycle"
        app:drawable_un_clickable="@mipmap/cycle_"
        app:drawable_clickable="@mipmap/teach_cycle"
        app:label_text="@string/teach_cycle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_56"/>

    <TextView
        android:id="@+id/teach_plan_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="@dimen/margin_40"
        android:layout_marginRight="@dimen/margin_20"
        android:layout_marginLeft="@dimen/margin_20"
        android:background="@drawable/bg_button_gray"
        android:padding="@dimen/padding_10"
        android:text="@string/confirm"
        android:textColor="@color/tip_text"/>
    <TextView
        android:id="@+id/teach_plan_del"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="@dimen/margin_20"
        android:background="@drawable/bg_button_del"
        android:padding="@dimen/padding_10"
        android:layout_marginRight="@dimen/margin_20"
        android:layout_marginLeft="@dimen/margin_20"
        android:text="@string/del_plan"
        android:visibility="gone"
        android:textColor="@color/white"/>
</LinearLayout>