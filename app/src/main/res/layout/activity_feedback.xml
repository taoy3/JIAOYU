<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cnst.wisdom.ui.activity.Feedback">
    <include
        layout="@layout/layout_head"/>

        <EditText
            android:id="@+id/et_feedback"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:gravity="left|top"
            android:minLines="6"
            android:maxLines="10"
            android:textSize="14sp"
            android:scrollbars="vertical"
            android:hint="说说您需要的……"
            android:background="@drawable/round_edit"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_commit"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:background="@drawable/button_common"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:padding="5dp"
            android:text="提交"
            android:textColor="@color/white"
            />
        <CheckBox
            android:id="@+id/cb_anonymity"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/btn_commit"
            android:layout_marginRight="20dp"
            android:text="匿名"
            android:textColor="@color/colorPrimary"

            />


    </RelativeLayout>

    <TextView
        android:id="@+id/tab"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="30dp"
        android:text="   反馈记录"
        android:gravity="center_vertical"
        android:textSize="12sp"
        android:background="@color/popup_selected"
        android:textColor="@color/colorPrimary"/>

    <ListView
        android:id="@+id/lv_feedback"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:dividerHeight="1px"
        android:layout_height="wrap_content"
        ></ListView>




</LinearLayout>
