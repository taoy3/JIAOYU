<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/ib_back"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/home"
            />
        <TextView
            android:id="@+id/tv_youkuplayer"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:text="播放页详情"/>
    </FrameLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_coursename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="如何提高教学技术"
            android:textStyle="bold"/>
        <Button
            android:id="@+id/btn_download"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:text="下载"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/select_btn"
            />
        <TextView
            android:id="@+id/courseintroduce"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_coursename"
            android:text="简介：提升教师的教育技术能力，是实现成功教育的关键。本文分别从六个方面阐述了如何提升教师的教育技术能力。"/>
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#50666666"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="评论"
        android:textColor="@color/colorPrimary"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:padding="5dp"
            android:hint="我的评论"
            android:textSize="15sp"
            android:background="@drawable/round_edit"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:text="发表"
            android:textSize="15sp"
            android:background="@drawable/select_btn"/>
    </LinearLayout>
    <ListView
        android:id="@+id/lv_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></ListView>

    

</LinearLayout>
