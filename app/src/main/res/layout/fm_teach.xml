<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
    >

    <include
        layout="@layout/flipper"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        />

    <LinearLayout
        android:id="@+id/linearLayout_main"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="15"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/padding_20"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/margin_20"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:clickable="true"
                android:onClick="teackplan"
                android:scaleType="fitCenter"
                android:src="@drawable/btn_plan"/>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/underline_gray"
                />


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/margin_20"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:clickable="true"
                android:onClick="guidance"
                android:scaleType="fitCenter"
                android:src="@drawable/btn_guide"/>

        </LinearLayout>

        <View style="@style/underline_gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin_20"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:clickable="true"
                android:onClick="onlinelearning"
                android:scaleType="fitCenter"
                android:src="@drawable/btn_learn"/>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/underline_gray"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin_20"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:clickable="true"
                android:onClick="material"
                android:scaleType="fitCenter"
                android:src="@drawable/btn_material"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
