<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cnst.wisdom.ui.activity.SettingActivity">

    <include
        layout="@layout/layout_head"/>

    <LinearLayout
        android:id="@+id/linearLayout_modifyPassword"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_56"
        android:background="@drawable/button_selector_gray"
        android:clickable="true">

        <ImageView
            android:layout_width="@dimen/width_plan_icon"
            android:layout_height="@dimen/width_plan_icon"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/padding_20"
            android:layout_marginRight="@dimen/padding_10"
            android:src="@drawable/btn_modifypassword"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="修改密码"
            android:textColor="@color/normal_text"
            android:textSize="@dimen/text_14"/>

        <ImageView
            style="@style/teach_plan_tarrow"/>
    </LinearLayout>

    <View style="@style/underline_gray"/>

    <LinearLayout
        android:id="@+id/linearLayout_logout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_56"
        android:background="@drawable/button_selector_gray"
        android:clickable="true">

        <ImageView
            android:layout_width="@dimen/width_plan_icon"
            android:layout_height="@dimen/width_plan_icon"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/padding_20"
            android:layout_marginRight="@dimen/padding_10"
            android:src="@drawable/btn_logout"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="退出"
            android:textColor="@color/normal_text"
            android:textSize="@dimen/text_14"/>

        <ImageView
            style="@style/teach_plan_tarrow"/>
    </LinearLayout>

    <View style="@style/underline_gray"/>

</LinearLayout>
