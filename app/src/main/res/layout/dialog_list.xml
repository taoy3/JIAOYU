<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog"
    android:clipChildren="true"
    android:orientation="vertical">

    <ListView
        android:id="@+id/sel_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@color/underline_gray"
        android:dividerHeight="1px"
        android:clipChildren="true"
        android:background="@drawable/bg_dialog_list"
        android:listSelector="@color/transparent"
        android:fastScrollAlwaysVisible="false"/>

    <View style="@style/underline_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_40"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_selector_left"
            android:gravity="center"
            android:padding="@dimen/padding_10"
            android:text="@string/cancel"
            android:textColor="@color/normal_text" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/underline_gray" />

        <Button
            android:id="@+id/confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_selector_right"
            android:gravity="center"
            android:padding="@dimen/padding_10"
            android:text="@string/confirm"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>