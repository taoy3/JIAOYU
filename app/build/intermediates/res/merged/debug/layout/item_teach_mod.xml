<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_56"
    android:orientation="vertical"
    android:gravity="center">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:paddingLeft="@dimen/padding_10"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/teach_mod_clazz"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="小一班"
            android:layout_marginRight="@dimen/margin_10"
            android:textColor="@color/normal_text"
            android:textSize="@dimen/text_14" />

        <TextView
            android:id="@+id/teach_mod_subject"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/margin_10"
            android:text="逻辑数学"
            android:textColor="@color/normal_text"
            android:textSize="@dimen/text_14" />

        <TextView
            android:id="@+id/teach_mod_term"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/margin_10"
            android:text="第一期"
            android:textColor="@color/normal_text"
            android:textSize="@dimen/text_14" />
    </LinearLayout>
        <TextView
            android:layout_marginTop="@dimen/margin_5"
            android:id="@+id/teach_mod_date"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="教学起始周：2016.01.11-2016.01.15"
            android:textColor="@color/tip_text"
            android:textSize="@dimen/text_14"/>
    </LinearLayout>
    <TextView
        android:id="@+id/teach_mod_state"
        android:layout_width="@dimen/width_60"
        android:layout_height="@dimen/height_30"
        android:layout_marginRight="15dp"
        android:layout_gravity="center"
        android:background="@mipmap/complete"
        android:clickable="true"
        android:gravity="center"
        android:text="@string/mof"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/text_14" />
    </LinearLayout>
    <!--<View-->
        <!--android:id="@+id/under_line"-->
        <!--style="@style/underline_gray"/>-->
</LinearLayout>