<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="10dp">

    <ImageView
        android:id="@+id/iv_item"
        android:layout_width="88dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_temp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_item"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvSubject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text=""
            android:textColor="@color/item_text2"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tvTerm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/tvSubject"
            android:paddingLeft="5dp"
            android:text=""
            android:textColor="@color/item_text2"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tvWeek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/tvTerm"
            android:paddingLeft="5dp"
            android:text=""
            android:textColor="@color/item_text2"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tvCourse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/tvWeek"
            android:paddingLeft="5dp"
            android:text=""
            android:textColor="@color/item_text2"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tvType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvSubject"
            android:layout_marginTop="5dp"
            android:text=""
            android:textColor="@color/item_text1"
            android:textSize="14sp"/>
    </RelativeLayout>

</RelativeLayout>